    "@tanstack/router-plugin": "^1.133.4",
    "@types/three": "^0.180.0",
    "bitecs": "^0.3.40",
    "leva": "^0.10.0",
    "pathfinding": "^0.4.18",
    "r3f-perf": "^7.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "three": "^0.180.0",
    "three-stdlib": "^2.36.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.13",
